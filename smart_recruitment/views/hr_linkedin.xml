<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_hr_job_kanban_linkedin" model="ir.ui.view">
            <field name="name">hr.job.linkedin</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr_recruitment.view_hr_job_kanban"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@role='menuitem']" position="after">
                    <div role="menuitem"><a type="object" name="publish_linkedin">Publier sur LinkedIn</a></div>
                    <div role="menuitem"><a type="object" name="collect_profiles">Collecter des profils pour le poste</a></div>
                </xpath>
            </field>
        </record>
        <record id="view_hr_profiles_kanban_view" model="ir.ui.view">
            <field name="name">hr.profile.linkedin</field>
            <field name="model">smart_recruitement.profile</field>
           <field name="arch" type="xml">
               <kanban create="false" limit="20">
                   <field name="name"/>
                   <field name="current_company"/>
                   <field name="picture"/>
                   <field name="linkedin_url"/>
                   <field name="saved"/>
                   <templates>
                       <t t-name="kanban-box">
                           <div class="o_kanban_card_header">
                                <div class="o_kanban_card_header_title" style="display: flex; margin-bottom: 10px; margin-left: 40px;">
                                    <img t-att-src="record.picture.value" class="o_kanban_image_fill_left" width="70px" height="70px"/>
                                    <div style="margin-top: auto; margin-bottom: auto;">
                                        <div class="o_primary col-12" style="padding-left: 5px;">
                                            <field name="saved" widget="boolean_favorite" nolabel="1"/>
                                            <span><t t-esc="record.name.value"/></span>
                                        </div>
                                        <div class="o_kanban_record_subtitle col-12 text-muted" style="padding-left: 5px;">
                                            <field name="current_company"/>
                                        </div>
                                    </div>
                                </div>
                                 <div name="kanban_boxes" class="row o_recruitment_kanban_boxes" style="margin-left: auto;margin-right: auto;">
                                    <div class="o_recruitment_kanban_box o_kanban_primary_bottom bottom_block" style="width: 100%;">
                                        <div class="col-6" style="float: left; padding-right: 5px;">
                                             <a target="_blank" type="object" name="send_message">
                                                <i class="fa fa-envelope" role="img" aria-label="Message" title="Message"/> Envoyer Message</a>
                                        </div>
                                        <div class="col-6" style="float: right;">
                                            <a target="_blank" t-att-href="record.linkedin_url.value">
                                                <i class="fa fa-linkedin" role="img" aria-label="Linkedin" title="Linkedin"/> Consulter Profile</a>
                                        </div>
                                    </div>
                                </div>
                           </div>
                       </t>
                   </templates>
               </kanban>
           </field>
        </record>
        <record id="view_hr_job_form_experiences" model="ir.ui.view">
            <field name="name">hr.job.years_of_experience</field>
            <field name="model">hr.job</field>
            <field name="inherit_id" ref="hr.view_hr_job_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='description']" position="attributes">
                    <attribute name="placeholder">Veuillez introduire le texte Ã  incorporer dans la publication LinkedIn</attribute>
                </xpath>
                <xpath expr="//field[@name='no_of_recruitment']" position="after">
                    <field name="post_image" widget="image"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>